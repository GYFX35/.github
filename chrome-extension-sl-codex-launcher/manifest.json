{
  "manifest_version": 3,
  "name": "Solo Leveling Codex Launcher",
  "version": "0.1.0",
  "description": "Quickly launch the Solo Leveling Character Codex PWA.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Open Solo Leveling Codex"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "*://*.sl-codex.com/"
  ]
}
